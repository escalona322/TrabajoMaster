@model Torneo
<h1>Editar Torneo</h1>
<form method="post" class="form-group align-content-center">
    <input type="hidden" name="idtorneo" value="@Model.IdTorneo"/>
    <div class="input-group my-2">
        <label class="input-group-text">Nombre: </label>
        <input type="text" name="nombre" class="form-control" value="@Model.Nombre"/>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Region: </label>
        <input type="text" name="region" class="form-control" value="@Model.Region"/>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Fecha: </label>
        <input type="date" name="fecha" class="form-control" value="@Model.Fecha"/>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Máximos entrants: </label>
        <input type="number" name="napuntados" class="form-control" value="@Model.Napuntados"/>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Descripcion: </label>
        <textarea name="descripcion" height="40" class="form-control" value="@Model.Descripcion"></textarea>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Normas: </label>
        <textarea type="text" name="normas" height="40" class="form-control" value="@Model.Normas"></textarea>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Tipo: </label>
        <input type="text" name="tipo" class="form-control" value="@Model.Tipo"/>
    </div>
    <div class="input-group my-2">
        <label class="input-group-text">Link: </label>
        <input type="text" name="link" class="form-control" value="@Model.Link"/>
    </div>
    <button type="submit" class="btn btn-outline-info form-control">
        Enviar
    </button>
</form>
